<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <cn.lawwing.wheellib.date.HourPicker
        android:id="@+id/hourPicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:indicatorText="@string/ycuwq_datepicker_hour"
        app:indicatorTextSize="12sp"
        app:wheelCyclic="true" />

    <cn.lawwing.wheellib.date.MinutePicker
        android:id="@+id/minutePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:indicatorText="@string/ycuew_datepicker_minute"
        app:indicatorTextSize="12sp"
        app:wheelCyclic="true" />

</LinearLayout>